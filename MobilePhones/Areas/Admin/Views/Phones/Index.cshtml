@model IEnumerable<MobilePhones.Models.Phone>

@{
    ViewData["Title"] = "Index";
}

<h1>Mobile Phones</h1>

<p>
    <a asp-area="Admin" asp-action="Create">Add New Phone</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-area="Admin" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
